<section class="container">
  <header>
    <h2>{{ section.settings.heading }}</h2>
  </header>

  <div class="product-list">
    {% for block in section.blocks %}
      <article class="product-card js-mobile-hide">
        <img src="{{ block.settings.product.featured_image | img_url: '900x900' }}" alt="{{ block.settings.product.title }}" class="product-image" data-secondary-img="{{ block.settings.product.images[1] | img_url: '900x900' }}">
        <div class="product-info">
          <h3>{{ block.settings.product.title }}</h3>
          <p>{{ block.settings.product.price | money }}</p>
        </div>
      </article>
    {% endfor %}
  </div>

  <footer>
    <button id="show-more">Show More</button>
    <button id="show-less" class="hidden">Show Less</button>
  </footer>
</section>


{% schema %}
  {
    "name": "Platter Best Sellers",
    "class": "flex justify-center",
    "settings": [
      {
        "type": "text",
        "id": "heading",
        "label": "Section Heading",
        "default": "Best Sellers"
      }
    ],
    "blocks": [
      {
        "type": "product",
        "name": "Product Card",
        "settings": [
          {
            "type": "product",
            "id": "product",
            "label": "Product"
          },
          {
            "type": "text",
            "id": "button_text",
            "label": "Button Text",
            "default": "Buy Now"
          }
        ],
        "limit": 10
      }
    ],
    "presets": [
      {
        "name": "Platter Best Sellers"
      }
    ]
  }
  {% endschema %}